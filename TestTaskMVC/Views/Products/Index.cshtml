@model IEnumerable<TestTaskMVC.Models.Product>

@{
    var i = 1;
    var count = Model.Count();
    ViewData["Title"] = "List of Products";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Title)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
                    <th scope="col">Total Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class="align-middle">
                            @Html.DisplayFor(modelItem => i)
                        </th>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"><i
                                class="bi bi-pencile-square"></i>Edit</a>
                             <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i
                                class="bi bi-trash"></i>Delete</a>    
                                 
                        </td>
                    </tr>
                    i += 1;
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Products" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

