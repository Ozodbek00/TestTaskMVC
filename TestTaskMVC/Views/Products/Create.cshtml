@model CreateProduct

@{
    ViewData["Title"] = "Add new A Product";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 style="text-align:center;">Add a New Product</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Products" asp-action="Create">
                    <input type="hidden" asp-for="UserId" value="@ViewBag.userId">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantiy" class="control-label"></label>
                        <input asp-for="Quantiy" class="form-control" />
                        <span asp-validation-for="Quantiy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>